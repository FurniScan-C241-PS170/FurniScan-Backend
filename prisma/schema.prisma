generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  user_id     Int       @id @default(autoincrement())
  username    String    @unique 
  email       String    @unique
  password    String
  created_at  DateTime  @default(now())
}

model Category {
  category_id   Int       @id @default(autoincrement())
  category_name String
